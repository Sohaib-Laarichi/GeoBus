<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GeoBusMarrakech" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Window background -->
        <item name="android:windowBackground">@drawable/gradient_background</item>

        <!-- Enable activity transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.GeoBus.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GeoBus.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GeoBus.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GeoBus.Caption</item>

        <!-- Button style -->
        <item name="buttonStyle">@style/Widget.GeoBus.Button</item>

        <!-- Card style -->
        <item name="cardViewStyle">@style/Widget.GeoBus.CardView</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.GeoBus.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="TextAppearance.GeoBus.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.00937</item>
    </style>

    <style name="TextAppearance.GeoBus.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="TextAppearance.GeoBus.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.GeoBus.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:letterSpacing">0.0892</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="Widget.GeoBus.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.GeoBus.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E0E0E0</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="Widget.GeoBus.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="elevation">8dp</item>
        <item name="borderWidth">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.GeoBus.SmallComponent</item>
    </style>

    <!-- Extended Floating Action Button Style -->
    <style name="Widget.GeoBus.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="elevation">8dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.GeoBus.SmallComponent</item>
    </style>

    <!-- Shape Appearance for Small Components -->
    <style name="ShapeAppearance.GeoBus.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
